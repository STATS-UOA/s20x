crossFactors <- function (x, ...){
    UseMethod("crossFactors")
}

crossFactors.default <- function (fac1, fac2)
{
    fac1.fac2 <- paste(fac1, fac2, sep = ".")

    return(fac1.fac2)
}

crossFactors.formula <- function (formula, data = NULL){
    if(missing(formula) || length(formula) !=2){
        stop("'formula' missing or incorrect")
    }

    m <- match.call ()
    m$drop.unused.levels <- TRUE
    m[[1]] <- as.name("model.frame")
    mf <- eval(m, parent.frame())

    Terms <- attr(mf, "terms")
    fac1<-mf[,1]
    fac2<-mf[,2]

    crossFactors.default(fac1, fac2)
}
